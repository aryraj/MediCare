<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mLinerLayout"

    tools:context="com.inc.hope.medicare.CartActivity">


    <ListView
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:id="@+id/mListView"
        android:layout_marginTop="100dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="35dp"
        android:text="Name :"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Email :"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/tv_name" />



    <TextView
        android:id="@+id/tv_total"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="26dp"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mListView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_total"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="Total" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/tv_name"
        android:textColor="@color/colorPrimaryDark"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:background="@drawable/button_capsule"
        android:textColor="@color/colorAccent"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_email"
        android:layout_alignEnd="@+id/mListView"
        android:text="Save Bill" />

</RelativeLayout>
